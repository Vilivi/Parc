<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device.width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@1,200;1,600&display=swap" rel="stylesheet"> 
        {% block stylesheets %}{{ encore_entry_link_tags('app') }}{% endblock %}
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/">Hoa Mai Parc</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="{{ path('attraction') }}">Attractions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('ticket_product') }}">Tarifs</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('review') }}">Vos avis</a>
                            </li>
                        </ul>
                        <div class="ms-auto me-4">
                            {% if app.user %}
                            <a href="{{ path('account') }}">Mon compte <span class="small">({{app.user.pseudo}})</span></a> || <a href="{{ path('app_logout') }}">Me d√©connecter</a>
                            {% else %}
                            <a href="{{ path('register') }}">M'inscrire</a> || <a href="{{ path('app_login') }}">Me connecter</a>
                            {% endif %}
                        </div>
                    <a href="{{ path('cart') }}" class="float-end float-lg-start anchor-cart"><img src="{{ asset('assets/img/png/shopping-cart.png') }}" alt="Mon panier" class="cart"></a> 
                </div>
            </div>
            </nav>
        </header>

        <main role="main">
            <div class="container marketing mt-5">

            {% block content %}
            {% endblock %}

            </div><!-- /.container -->

            <!-- FOOTER -->
        </main>
        <footer class="container-fluid text-white text-center bg-dark mt-5">
                <p>&copy; 2017-2020 Company, Inc. &middot; </p>
                <p><a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
        </footer>
        {{ encore_entry_script_tags('app') }}
    </body>
    {% block script %}{% endblock %}
</html>