{% extends 'base.html.twig' %}

{% block title %}Les tarifs - Hoa Mai Parc{% endblock %}

{% block content %}
    <h1 class="content-title">Les tarifs :</h1>
    <br>
    <div class="row my-2">
        {% for ticket in tickets %}
        <div class="col-md-3 m-auto border border-secondary shadow-sm row">
            <div class="col-md-12 text-center box-shadow">
                <h5 class="border-top-0 border-end-0 border-start-0 border border-dark p-2">{{ticket.ticketName}}</h5>
                <p class="d-flex justify-content-around">
                    <span>{{(ticket.ticketPrice  / 100)|number_format(2, ',', '.') }} €</span>
                </p>
            </div>
        </div>
        {% endfor %}
    </div>
    {% if days %}
    <div class="mt-5">
        {% include 'tickets_form.html.twig' %}
    </div>
    {% else %}
    <p class="mt-5">Souhaitez-vous <a class="anchor" href="{{ path('reservation') }}">réserver une date</a>?</p>
    {% endif %}
{% endblock %}
