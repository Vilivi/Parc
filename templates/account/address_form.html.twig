{% extends 'base.html.twig' %}

{% block title %}{% if update is defined %}Modification d'une adresse{% else %}Ajout d'une adresse{% endif %} - Hoa Mai Parc{% endblock %}

{% block content %}
    <h1 class="content-title">{% if update is defined %}Modification d'une adresse{% else %}Ajout d'une adresse :{% endif %}</h1>

    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.name) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.firstname) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.lastname) }}
        </div>
        <div class="col-md-12">
            {{ form_row(form.company) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.address) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.postal) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.city) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.country) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
