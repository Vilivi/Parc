{% extends 'base.html.twig' %}

{% block title %}Ma commande - Hoa Mai Parc{% endblock %}

{% block content %}
    <h2>Je choisis mon adresse de facturation :</h2>
    <div>
        <div class="col-md-5">                
                {% set formHtml %}
                    {{ form_start(form, {action:path('order_recap')}) }}
                        {{ form_label(form.addresses, 'Choisissez votre adresse de livraison') }}
                        <a href="{{ path('account_address_add') }}" class="m-2">Ajouter une nouvelle adresse</a>
                        <hr>
                    {{ form_end(form) }}
                {% endset %}

                {{ formHtml|replace({'[br]' : '<br/>'})|raw }}
        </div>
    </div>
{% endblock %}
