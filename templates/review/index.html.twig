{% extends 'base.html.twig' %}

{% block title %}Les avis - Hoa Mai Parc{% endblock %}


{% block content %}
    {% for review in reviews %}
    <div class="border rounded my-5">
        <div class="d-flex justify-content-between">
            <p class="p-2">{{review.title}} - {{ review.createdAt|date('d-m-Y h:s:i', "Europe/Paris") }}</p>
            <p class="p-2">{{review.pseudo}}</p>
            <p class="p-2">{{ review.notation }}</p>
        </div>
        <div class="border-top">{{ review.comment }}</div>
    </div>

    {% endfor %}

    {% if app.user %}
    {{form_start(form)}}
    <div class="row border p-1">
        <div class="col-md-12 border-bottom rounded">
            {{ app.user.pseudo }}
        </div>
        <div class="col-md-6 p-1">
            {{ form_row(form.title) }}
        </div>
        <div class="col-md-6 p-1">
            {{ form_row(form.notation) }}
        </div>
        <div class="col-md-12 p-1">
            {{ form_row(form.comment) }}
        </div>
        <div class="col-md-12 m-2">
            {{ form_row(form.submit) }}
        </div>
    </div>
    {{form_end(form)}}
    {% else %}
    {{form_start(form)}}
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.pseudo) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.title) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.notation) }}
        </div>
        <div class="col-md-12">
            {{ form_row(form.comment) }}
        </div>
        <div class="col-md-12">
            {{ form_row(form.submit) }}
        </div>
    </div>
    {{form_end(form)}}
    {% endif %}
{% endblock %}
